# Anthropic API key (required)
# Get it from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Telegram Bot settings
# Get bot token from @BotFather: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram User ID (required for bot owner)
# You can get it from @userinfobot: https://t.me/userinfobot
TELEGRAM_OWNER_ID=your_telegram_id_here

# Comma-separated list of allowed Telegram user IDs (optional)
# Example: 123456789,987654321
TELEGRAM_ALLOWED_USERS=

# Screen dimensions (optional, defaults shown)
WIDTH=1024
HEIGHT=768

# API Provider (optional, defaults to 'anthropic')
# Options: anthropic, bedrock, vertex
API_PROVIDER=anthropic 